<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:clipToPadding="false">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/user"
                android:layout_marginBottom="16dp"
                android:contentDescription="Voice Calling App"
                android:padding="12dp" />

            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello User"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's Talk"
                android:textColor="#E8F4FD"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server status: "
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/status"
                        android:text="disconnected ðŸ”´"
                        android:textSize="15sp"
                        android:textColor="#222222"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/refresh_Button"
                        android:src="@drawable/refresh_24"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"/>





                </LinearLayout>




                <TextView
                    android:id="@+id/userIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected as Android User"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to make calls"
                    android:textSize="14sp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Call Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make a Call"
                    android:textSize="18sp"
                    android:textColor="#222222"
                    android:textStyle="bold"

                    android:layout_marginBottom="16dp" />

                <!-- Call Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter user ID to call"
                    android:layout_marginBottom="15dp"
                    app:boxStrokeColor="@color/teal_700"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/targetId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Call Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/callButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="ðŸ“ž Call Now"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    app:cornerRadius="30dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/teal_700" />

                <!-- Map Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map View"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/users_list_background"
                    android:elevation="4dp">

                    <org.osmdroid.views.MapView
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
                <LinearLayout
                android:id="@+id/locationDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/location_details_background"
                android:padding="12dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/locationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/locationCoords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lat: 0.000, Lng: 0.000"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/getLocation"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Get Current Location"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="25dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/purple_500"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quick Actions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/send_location"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ“ Send Location"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="25dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@color/teal_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸšª Log Out"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="25dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
